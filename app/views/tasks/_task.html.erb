<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Assigned to:</strong>
    <%= task.assigned_to_id %>
  </p>

  <p>
    <strong>Monthly schedule:</strong>
    <%= task.monthly_schedule_id %>
  </p>

  <p>
    <strong>Start date:</strong>
    <%= task.start_date %>
  </p>

  <p>
    <strong>Due date:</strong>
    <%= task.due_date %>
  </p>

  <p>
    <strong>Status:</strong>
    <%= task.status %>
  </p>

  <p>
    <strong>Created by:</strong>
    <%= task.created_by_id %>
  </p>

  <p>
    <strong>Deleted at:</strong>
    <%= task.deleted_at %>
  </p>

</div>
