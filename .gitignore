# Ignore bundler config.
/.bundle

# Ignore all logfiles and tempfiles.
/log/*
!/log/.keep
/tmp
!/tmp/.keep

# Ignore database.
/db/*.sqlite3
/db/*.sqlite3-journal
/db/*.pg
/db/*.pg-journal
/db/*.pid
/db/*.pid.lock

# Ignore credentials and master key.
/config/master.key
/config/credentials/*.key

# Ignore node_modules (for Rails + Webpacker or JS stuff)
/node_modules

# Ignore Yarn files
/yarn-error.log
/yarn-debug.log*

# Ignore precompiled assets.
/public/assets
/public/packs
/public/packs-test
/public/packs-development
/public/packs-production
/public/packs-default

# Ignore files generated by Sprockets.
/public/system

# Ignore uploaded files in development
/storage/*
!/storage/.keep

# Ignore dotenv environment variable files
.env.development
.env.test
.env.production
.env.staging

# Ignore Docker-related
/docker_ssh
docker-compose.override.yml

# Ignore byebug command history file.
.byebug_history

# Ignore IDEs
/.idea/
/.vscode/

# Ignore macOS system files
.DS_Store

# Ignore coverage reports
/coverage/

# Ignore system specific
*.swp
*.swo

# Ignore vagrant files
/.vagrant/


# Ignore master key for decrypting credentials and more.
/config/master.key
